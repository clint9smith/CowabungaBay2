@model IEnumerable<CowabungaBay2.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>These Employees Haven't Submitted an I9 Form</h2>

<table class="table">
    <tr>
        <th>
            Employee Name
        </th>
        <th>
            I9 Form
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    if (item.I9 == null)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeName)
        </td>
        <td>
            <p style="color:red">X</p>
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
        }
    }

</table>
